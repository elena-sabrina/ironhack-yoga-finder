<div class="hero background-white">
  <div class="hero-box ">
    <h1>Sign Up</h1>
    <form action="/authentication/sign-up" method="POST" enctype="multipart/form-data">
      <div class="form-styling">
        <label for="input-name">Name</label>
        <input type="text" id="input-name" name="name" placeholder="" />
      </div>
      <div class="form-styling">
        <label for="input-email">Email</label>
        <input type="email" id="input-email" name="email" placeholder="" />
      </div>
      <div class="form-styling">
        <label for="input-password">Password</label>
        <input type="password" name="password" id="input-password" placeholder="" />
      </div>
      <div class="form-styling">
        <label for="input-profile-picture"Add image></label>
        <input id="input-profile-picture" type="file" name="picture" accept="image/jpeg, image/png">
      </div>
      <div class="center">
        <button class="secondary-button button-styling">Sign Up</button>
      </div>
    </form>
  </div>
</div>
  
