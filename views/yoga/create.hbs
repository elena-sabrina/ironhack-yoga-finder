      center: {
        lat: -8.8,
        lng: 115.15
      },
      zoom: 12
    });

    map.addListener('click', (position) => {
      const latitude = position.latLng.lat();
      const longitude = position.latLng.lng();
      latitudeInput.value = latitude;
      longitudeInput.value = longitude;

      const marker = new google.maps.Marker ({
        position: {
        lat: latitude,
        lng: longitude
      }, 
