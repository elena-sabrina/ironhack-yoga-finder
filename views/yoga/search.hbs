<div class="split-screen ">
    <div class="split-screen-left">
        <div class=" split-screen-upper-left"> 
            <h2>Find the Class </br>
            <span class="light-font"> that fits best to you.</span> 
            </h2>

            <button id="input-dayindicationtoday"> Today </button>
            <button id="input-dayindicationtomorrow"> Tomorrow </button>
            <button id="input-dayindicationany"> Any </button>
              

        </div>
        <div class="background-white split-screen-lower-left">
            <div class="search">
                <img src="/images/search.png" alt="search-icon">
                <form action="">
                    <label for="site-search"></label>
                    <input type="search" id="site-search" name="q" placeholder="search classes">     
                </form>
